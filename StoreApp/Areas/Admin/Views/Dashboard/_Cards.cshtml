<div class="row d-flex align-items-stretch">
	<!-- Product Summary Card -->
	<div class="col-12 col-sm-6 col-md-3 mb-3">
		<div class="card bg-primary text-white mx-2 h-100" style="width: 100%;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Products</h5>
				<h3 class="card-center display-3">
					@await Component.InvokeAsync("ProductSummary")
				</h3>
				<a asp-controller="Product" asp-action="Index" class="card-link text-white">Products</a>
				<a asp-controller="Product" asp-action="Create" class="card-link text-white">Create Product</a>
			</div>
		</div>
	</div>

	<!-- Category Summary Card -->
	<div class="col-12 col-sm-6 col-md-3 mb-3">
		<div class="card bg-danger text-white mx-2 h-100" style="width: 100%;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Categories</h5>
				<h3 class="card-center display-3">
					@await Component.InvokeAsync("CategorySummary")
				</h3>
				<a asp-controller="Category" asp-action="Index" class="card-link text-white">Categories</a>
				<a asp-controller="Category" asp-action="Create" class="card-link text-white">New Categories</a>
			</div>
		</div>
	</div>

	<!-- User Summary Card -->
	<div class="col-12 col-sm-6 col-md-3 mb-3">
		<div class="card bg-info text-white mx-2 h-100" style="width: 100%;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Users İn Progress</h5>
				<h3 class="card-center display-3">
					@await Component.InvokeAsync("UserSummary")
				</h3>
				<a asp-controller="User" asp-action="Index" class="card-link text-white">Users</a>
				<a asp-controller="User" asp-action="Create" class="card-link text-white">New User</a>
			</div>
		</div>
	</div>

	<!-- Order Summary Card -->
	<div class="col-12 col-sm-6 col-md-3 mb-3">
		<div class="card bg-warning text-white mx-2 h-100" style="width: 100%;">
			<div class="card-body text-center">
				<h6 class="card-subtitle mb-2">Number of</h6>
				<h5 class="card-title">Orders İn Progress</h5>
				<h3 class="card-center display-3">
					@await Component.InvokeAsync("OrderInProgress")
				</h3>
				<a asp-controller="Order" asp-action="Index" class="card-link text-white">Orders</a>
			</div>
		</div>
	</div>
</div>
