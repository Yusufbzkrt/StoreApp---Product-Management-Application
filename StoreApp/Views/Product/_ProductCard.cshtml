@using StoreApp.Infrastructe.Extensions
@model Product

<div class="col-sm-12 col-md-4 my-2">
	<div class="card" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
		<img src="@Model?.ImageUrl" class="card-img-top" alt="..." style="max-height: 200px; object-fit: cover;">
		<div class="card-body" style="flex-grow: 1;">
			<h5 class="card-title">@Model.ProductName</h5>
			<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
			<div class="btn-group mt-auto">
				<form id="@Model.ProductId" asp-page="/cart" method="post">
					<input type="hidden" asp-for="ProductId" />
					<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

					<a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
						<i class="fa-solid fa-arrow-right"></i> Details
					</a>

					<button type="submit" class="btn btn-outline-primary">
						<i class="fa fa-cart-plus"></i>
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts{
	<script src="~/js/ProductCard.js"></script>
}
