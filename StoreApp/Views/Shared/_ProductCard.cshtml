@using StoreApp.Infrastructure.Extensions
@model Product

<div class="col-sm-12 col-md-4 my-2">
	<div class="card" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
		<div class="card-header text-center">
			@Model.ProductName
		</div>
		<img src="@Model?.ImageUrl" class="card-img-top" alt="..." style="max-height: 200px; object-fit: cover;">
		<div class="card-body" style="flex-grow: 1;">
			<div class="card-text">
				<div class="text-danger text-center lead p-2 rounded-2">
					@Model.Price.ToString("C2")
				</div>
			</div>
			<p class="card-text">@Model?.Summary</p>
			<div class="d-flex justify-content-center">
				<div class="btn-group mt-auto">
					<form id="@Model.ProductId" asp-page="/cart" method="post">
						<input type="hidden" asp-for="ProductId" />
						<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

						<a asp-controller="Product" asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-outline-secondary rounded-2">
							<i class="fa-solid fa-arrow-right"></i>
						</a>

						<button type="submit" class="btn btn-outline-secondary mx-1">
							<i class="fa fa-cart-plus"></i>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<script src="~/js/ProductCard.js"></script>
}
