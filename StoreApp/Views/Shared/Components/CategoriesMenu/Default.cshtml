@model IEnumerable<Category>

<div class="mt-3">
	<h6 class="lead">
		<i class="fa fa-solid fa-bars text-secondary"></i>
		Categories
	</h6>
</div>


<div class="my-4">
	<ul class="list-group">
		@foreach (var cat in Model)
		{
			<li class="list-group">
				<a asp-action="Index" asp-route-categoryId="@cat.CategoryId" class="btn btn-primary mx-2 my-2">
					@cat.CategoryName
				</a>
			</li>

		}
	</ul>
</div>